{
  "name": "local-read",
  "version": "1.0.0",
  "description": "一个本地电子书阅读器，支持 EPUB、TXT、PDF 格式",
  "main": "electron-main.js",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "start": "node server.js",
    "electron": "electron .",
    "electron:dev": "electron . --dev",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "dist:win:zip": "electron-builder --win zip",
    "dist:mac": "electron-builder --mac",
    "dist:linux": "electron-builder --linux"
  },
  "keywords": [
    "electron",
    "ebook",
    "reader",
    "epub",
    "pdf"
  ],
  "author": "ReasonW6",
  "license": "ISC",
  "dependencies": {
    "adm-zip": "^0.5.12",
    "express": "^5.1.0",
    "multer": "^2.0.2"
  },
  "devDependencies": {
    "electron": "^33.4.11",
    "electron-builder": "^25.1.8",
    "jsdom": "^28.0.0",
    "supertest": "^7.2.2",
    "vitest": "^4.0.18"
  },
  "build": {
    "appId": "com.localread.app",
    "productName": "本地阅读器",
    "copyright": "Copyright © 2024 ReasonW6",
    "asar": true,
    "compression": "normal",
    "npmRebuild": false,
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "**/*",
      "!dist/**",
      "!node_modules/.cache/**",
      "!.git/**",
      "!.gitignore",
      "!README.md",
      "!更新日志.txt",
      "!server.js",
      "!start.bat",
      "!**/*.map",
      "!**/*.md",
      "!books/**",
      "!user-data/**"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "本地阅读器"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.books"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icon.png",
      "category": "Office"
    }
  }
}
